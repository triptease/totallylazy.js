{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "target": "ES6",
        "noEmitOnError": true,
        "sourceMap": true,
        "importHelpers": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "preserveSymlinks": false,
        "lib": ["dom", "esnext"],
        "types": ["jest", "node"]
    },
    "exclude": ["node_modules"]
}
